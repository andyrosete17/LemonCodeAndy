{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["cypress", "node", "jest"],
    "baseUrl": "./src/",
    "paths": {
      "common-app": ["common-app"],
      "common": ["common"],
      "core": ["core"],
      "layouts": ["layouts"],
      "pods": ["pods"],
      "scenes": ["scenes"]
    }
  },
  "types": ["jest", "node", "@types/testing-library__jest-dom"],
  "include": ["./src/**/*", "./config/test/setup.ts", "./global.types.d.ts"],
  "exclude": ["node_modules", "cypress"]
}
