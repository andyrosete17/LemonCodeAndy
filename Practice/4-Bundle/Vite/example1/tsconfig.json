{
  "compilerOptions": {
    "esModuleInterop": true, 
    "isolatedModules": true, // importante para que cada modulo se trate como un modulo aislado, util para el arbol de dependencias
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, // importante para que no se compile el libreria de typescript
    "sourceMap": true, // importante para que se genere el sourcemap en caso de errores
    "target": "ESNext",
    "useDefineForClassFields": true // el propio standar the ecmascript trabaja con esto asi definido
  },
  "include": ["src"]
}
